generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String               @id @default(uuid())
  googleId       String?              @unique @map("google_id")
  email          String?              @unique
  name           String?
  profileImage   String?              @map("profile_image")
  createdAt      DateTime             @default(now()) @map("created_at")
  updatedAt      DateTime             @updatedAt @map("updated_at")
  emailVerified  DateTime?            @map("email_verified")
  image          String?
  currentLevelId String?              @map("current_level_id")
  accounts       Account[]
  sessions       Session[]
  levelStatus    UserLevelStatus[]
  moduleProgress UserModuleProgress[]
  quizAttempts   UserQuizAttempt[]
  currentLevel   Level?               @relation("UserCurrentLevel", fields: [currentLevelId], references: [id])

  @@map("users")
}

model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @map("refresh_token")
  access_token      String? @map("access_token")
  expires_at        Int?    @map("expires_at")
  token_type        String? @map("token_type")
  scope             String?
  id_token          String? @map("id_token")
  session_state     String? @map("session_state")
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Level {
  id           String            @id @default(uuid())
  title        String
  description  String?
  order        Int               @unique
  createdAt    DateTime          @default(now()) @map("created_at")
  updatedAt    DateTime          @updatedAt @map("updated_at")
  modules      Module[]
  userStatuses UserLevelStatus[]
  currentUsers User[]            @relation("UserCurrentLevel")

  @@map("levels")
}

model Module {
  id           String               @id @default(uuid())
  levelId      String               @map("level_id")
  title        String
  description  String?
  order        Int
  createdAt    DateTime             @default(now()) @map("created_at")
  updatedAt    DateTime             @updatedAt @map("updated_at")
  contentItems ContentItem[]
  level        Level                @relation(fields: [levelId], references: [id], onDelete: Cascade)
  quizzes      Quiz[]
  userProgress UserModuleProgress[]

  @@unique([levelId, order])
  @@map("modules")
}

model ContentItem {
  id        String   @id @default(uuid())
  moduleId  String   @map("module_id")
  title     String
  content   String
  type      String
  order     Int
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  module    Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@unique([moduleId, order])
  @@map("content_items")
}

model Quiz {
  id           String            @id @default(uuid())
  moduleId     String            @map("module_id")
  title        String
  description  String?
  createdAt    DateTime          @default(now()) @map("created_at")
  updatedAt    DateTime          @updatedAt @map("updated_at")
  questions    QuizQuestion[]
  module       Module            @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  userAttempts UserQuizAttempt[]

  @@map("quizzes")
}

model QuizQuestion {
  id            String       @id @default(uuid())
  quizId        String       @map("quiz_id")
  question      String
  type          String
  options       Json?
  correctAnswer String       @map("correct_answer")
  order         Int
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")
  quiz          Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  userAnswers   UserAnswer[]

  @@unique([quizId, order])
  @@map("quiz_questions")
}

model UserModuleProgress {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  moduleId    String    @map("module_id")
  completed   Boolean   @default(false)
  progress    Float     @default(0)
  completedAt DateTime? @map("completed_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  unlocked    Boolean   @default(false)
  module      Module    @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, moduleId])
  @@map("user_module_progress")
}

model UserQuizAttempt {
  id          String       @id @default(uuid())
  userId      String       @map("user_id")
  quizId      String       @map("quiz_id")
  score       Float
  answers     Json
  completed   Boolean      @default(false)
  completedAt DateTime?    @map("completed_at")
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  userAnswers UserAnswer[]
  quiz        Quiz         @relation(fields: [quizId], references: [id], onDelete: Cascade)
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_quiz_attempts")
}

model UserAnswer {
  id           String          @id @default(uuid())
  attemptId    String          @map("attempt_id")
  questionId   String          @map("question_id")
  userAnswer   String          @map("user_answer")
  isCorrect    Boolean         @map("is_correct")
  aiFeedbackId String?         @unique @map("ai_feedback_id")
  createdAt    DateTime        @default(now()) @map("created_at")
  updatedAt    DateTime        @updatedAt @map("updated_at")
  aiFeedback   AiFeedback?     @relation(fields: [aiFeedbackId], references: [id])
  attempt      UserQuizAttempt @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  question     QuizQuestion    @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@map("user_answers")
}

model AiFeedback {
  id          String      @id @default(uuid())
  answerId    String      @unique @map("answer_id")
  feedback    String
  explanation String?
  suggestions String?
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  userAnswer  UserAnswer?

  @@map("ai_feedback")
}

model UserLevelStatus {
  id          String    @id @default(uuid())
  userId      String    @map("user_id")
  levelId     String    @map("level_id")
  unlocked    Boolean   @default(false)
  completed   Boolean   @default(false)
  completedAt DateTime? @map("completed_at")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")
  level       Level     @relation(fields: [levelId], references: [id], onDelete: Cascade)
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, levelId])
  @@map("user_level_status")
}
